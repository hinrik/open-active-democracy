<% if not @near_top.empty? %>
    <% if Government.current.layout == 'better_reykjavik' %>
        <h4><%= tr("These are your priorities that have a good chance of being chosen for formal evaluation by the City
        of ReykjavÃ­k at the end of this month. If you want them to succeed or fail you should share them on Facebook and
        other social media and encourage your friends to support or oppose them!", "email") %></h4>

        <% @near_top.each do |near_top| %>
            <p>
              <% if near_top[:endorsement] == 1 %>
                  <%= tr("The priority {priority_name}, which you support, is in {position}. place in the {category} category.", "email",
                         priority_name: link_to(near_top[:priority].name, near_top[:priority].show_url),
                         position: near_top[:position],
                         category: link_to(tr(near_top[:category].name, "model/category"), near_top[:category].show_url)) %>
              <% else %>
                  <%= tr("The priority {priority_name}, which you oppose, is in {position}. place in the {category} category.", "email",
                         priority_name: link_to(near_top[:priority].name, near_top[:priority].show_url),
                         position: near_top[:position],
                         category: link_to(tr(near_top[:category].name, "model/category"), near_top[:category].show_url)) %>
              <% end %>
            </p>
        <% end %>
    <% end %>
    <br>
<% end  %>