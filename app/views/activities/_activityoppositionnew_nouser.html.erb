<img src="/images/icons/delete.png" height="16" width="16" border="0" class="icon">
<% if activity.has_ad? %>
	<% if activity.attribute_present?("position") %>
		<%= raw tr("Opposed {priority_name} at priority {position} due to <a href='{ad_url}'>{ad_user} ad</a>", "view/activities/_activityoppositionnew_nouser", :priority_name => link_to(activity.priority.name, activity.priority), :position => activity.position, :ad_url => priority_ad_path(activity.priority,activity.ad), :ad_user => activity.ad.user.name.possessive) %>
	<% elsif activity.priority %>
		<%= raw tr("Opposed {priority_name} due to <a href='{ad_url}'>{ad_user} ad</a>", "view/activities/_activityoppositionnew_nouser", :priority_name => link_to(activity.priority.name, activity.priority), :ad_url => priority_ad_path(activity.priority,activity.ad), :ad_user => activity.ad.user.name.possessive) %>
	<% end %>
<% else %>
	<% if activity.attribute_present?("position") %>
		<%= raw tr("Opposed {priority_name} at priority {position}", "view/activities/_activityoppositionnew_nouser", :priority_name => link_to(activity.priority.name, activity.priority), :position => activity.position) %>
	<% elsif activity.priority %>
		<%= raw tr("Opposed {priority_name}", "view/activities/_activityoppositionnew_nouser", :priority_name => link_to(activity.priority.name, activity.priority)) %>
	<% end %>
<% end %>