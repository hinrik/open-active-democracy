<% if activity.capital.amount > 0 %>
<img src="/images/icons/coins.png" height="16" width="16" border="0" class="icon">
<%= raw tr("Earned {count}{currency_short_name} for {count} new followers", "view/activities/_activitycapitalfollowers_nouser", :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user))%>
<% else %>
<img src="/images/icons/coins_delete.png" height="16" width="16" border="0" class="icon">
<%= raw tr("Lost {count}{currency_short_name} for {count} less followers", "view/activities/_activitycapitalfollowers_nouser", :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user))%>
<% end %>
