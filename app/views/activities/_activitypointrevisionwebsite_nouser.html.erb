<img src="/images/icons/link_edit.png" height="16" width="16" border="0" class="icon">
<% if activity.revision.has_website? %>
<%= raw tr("Revised the source link for {point_name}", "view/activities/_activitypointrevisionwebsite_nouser", :point_name => link_to(activity.point.name, activity.point)) %>
<% else %>
<%= raw tr("Removed the source link from {point_name}", "view/activities/_activitypointrevisionwebsite_nouser", :point_name => link_to(activity.point.name, activity.point)) %>
<% end %>
