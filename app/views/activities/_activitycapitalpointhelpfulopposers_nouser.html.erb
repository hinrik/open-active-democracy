<% if activity.capital.amount > 0 %>
<img src="/images/icons/coins.png" height="16" width="16" border="0" class="icon">
    <% if activity.capital.is_undo? %>
        <%= raw tr("Earned {capital}{currency_short_name} because opposers didn't find {point_name} unhelpful anymore", "view/activities/_activitycapitalpointhelpfulopposers_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.point.name), activity.point))%>
    <% else %>
        <%= raw tr("Earned {capital}{currency_short_name} because opposers found {point_name} helpful", "view/activities/_activitycapitalpointhelpfulopposers_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.point.name), activity.point))%>
    <% end %>
<% else %>
<img src="/images/icons/coins_delete.png" height="16" width="16" border="0" class="icon">
    <% if activity.capital.is_undo? %>
        <%= raw tr("Lost {capital}{currency_short_name} because opposers didn't find {point_name} helpful anymore", "view/activities/_activitycapitalpointhelpfulopposers_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.point.name), activity.point))%>
    <% else %>
        <%= raw tr("Lost {capital}{currency_short_name} because opposers found {point_name} unhelpful", "view/activities/_activitycapitalpointhelpfulopposers_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.point.name), activity.point))%>
    <% end %>
<% end %>
